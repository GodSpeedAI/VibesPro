{
    "dependencies": {
        "next": "14.2.12",
        "react": "18.3.1",
        "react-dom": "18.3.1"
    },
    "description": "Production-ready application generated by HexDDD-VibePDK merger",
    "packageManager": "pnpm@9.0.0",
    "devDependencies": {
        "@dqbd/tiktoken": "^1.0.15",
        "@nx/devkit": "22.0.2",
        "@nx/eslint": "22.0.2",
        "@nx/expo": "22.0.2",
        "@nx/js": "22.0.2",
        "@nx/next": "22.0.2",
        "@nx/node": "22.0.2",
        "@nx/remix": "22.0.2",
        "@nx/workspace": "22.0.2",
        "@nxlv/python": "^18.0.0",
        "@openapitools/openapi-generator-cli": "^2.13.4",
        "@types/node": "^22.5.4",
        "@types/react": "^18.3.5",
        "@types/react-dom": "^18.3.0",
        "eslint-config-next": "^14.2.12",
        "husky": "^8.0.0",
        "lint-staged": "^14.0.0",
        "markdownlint": "^0.36.0",
        "markdownlint-cli": "^0.36.0",
        "nx": "22.0.2",
        "shellcheck": "^4.1.0",
        "tsx": "^4.16.2",
        "typescript": "^5.5.4"
    },
    "license": "MIT",
    "lint-staged": {
        "**/*.md": [
            "markdownlint --config .markdownlint.json"
        ],
        ".github/prompts/*.prompt.md": [
            "node tools/prompt/lint.js"
        ]
    },
    "name": "{{ project_slug }}",
    "pnpm": {
        "overrides": {
            "@nrwl/devkit": "22.0.2"
        }
    },
    "private": true,
    "scripts": {
        "build": "nx run-many --target=build --all",
        "dev": "nx run-many --target=serve --all --parallel=5",
        "docs:links": "node tools/docs/link_check.js",
        "env:audit": "node tools/audit/env_audit.js",
        "format": "nx run-many --target=format --all",
        "generate": "just build",
        "lint": "nx run-many --target=lint --all",
        "lint:md": "markdownlint \"**/*.md\" --config .markdownlint.json",
        "lint:shell": "shellcheck scripts/*.sh",
        "pr:comment": "node tools/ci/pr_comment.js",
        "prompt:lifecycle": "node tools/cli/prompt_lifecycle.js .github/prompts/spec.implement.prompt.md",
        "prompt:lint": "for f in .github/prompts/*.prompt.md; do node tools/prompt/lint.js \"$f\" || exit 1; done",
        "prompt:plan": "for f in .github/prompts/*.prompt.md; do node tools/prompt/plan_preview.js \"$f\" || exit 1; done",
        "prompt:plan:accurate": "PROMPT_TOKENIZER=accurate for f in .github/prompts/*.prompt.md; do node tools/prompt/plan_preview.js --accurate \"$f\" || exit 1; done",
        "spec:matrix": "node tools/spec/matrix.js",
        "test": "nx run-many --target=test --all",
        "typecheck": "nx run-many --target=typecheck --all"
    },
    "version": "0.1.0",
    "workspaces": [
        "apps/*",
        "libs/*",
        "tools/*",
        "generators/*"
    ]
}
