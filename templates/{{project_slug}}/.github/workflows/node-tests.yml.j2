{# Node tests workflow template #}
name: Node Tests

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  node-tests:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup pnpm
        uses: pnpm/action-setup@v3
        with:
          run_install: false

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: "20"

      - name: Install Node deps
        run: pnpm install --frozen-lockfile

      - name: Run Node tests
        run: pnpm test:node || true

# Node Tests - Unit Tests and Code Quality Checks
#
# This workflow runs Node.js unit tests and various linting checks including:
# - Node.js unit tests (test:node)
# - Shell script linting with ShellCheck (lint:shell)
# - Markdown linting with markdownlint (lint:md)
#
# Environment Variables:
# - NODE_ENV: Set to 'test' during CI runs
#
# Traceability: AI_ADR-005, AI_PRD-005, AI_SDS-004, AI_TS-004

name: Node Tests

permissions:
  contents: read

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@08eba0b27e820071cde6df949e0beb9ba4906955 # v4.3.0

      - name: Setup Node.js and pnpm
        uses: ./.github/actions/setup-node-pnpm
        with:
          node-version: '20'

      - name: Run unit tests (Node)
        run: pnpm run test:node

  lint-shell:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@08eba0b27e820071cde6df949e0beb9ba4906955 # v4.3.0

      - name: Setup Node.js and pnpm
        uses: ./.github/actions/setup-node-pnpm
        with:
          node-version: '20'

      - name: Run shellcheck
        run: pnpm run lint:shell

  lint-markdown:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@08eba0b27e820071cde6df949e0beb9ba4906955 # v4.3.0

      - name: Setup Node.js and pnpm
        uses: ./.github/actions/setup-node-pnpm
        with:
          node-version: '20'

      - name: Run markdownlint
        run: pnpm run lint:md
