{
  "name": "{{ project_slug }}",
  "version": "0.1.0",
  "description": "{{ project_name }}",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "dev": "nx run-many --target=serve --all --parallel=5",
    "prompt:lint": "for f in .github/prompts/*.prompt.md; do node tools/prompt/lint.js \"$f\" || exit 1; done",
    "spec:matrix": "node tools/spec/matrix.js",
    "test:node": "node tools/test/node-smoke.cjs",
    "typecheck": "nx run-many --target=typecheck --all",
    "format": "nx run-many --target=format --all",
    "lint:md": "markdownlint \"**/*.md\" --config .markdownlint.json",
    "lint:shell": "shellcheck scripts/*.sh",
    "docs:links": "node tools/docs/link_check.js",
    "env:audit": "node tools/audit/env_audit.js",
    "pr:comment": "node tools/ci/pr_comment.js",
    "prompt:plan": "for f in .github/prompts/*.prompt.md; do node tools/prompt/plan_preview.js \"$f\" || exit 1; done",
    "prompt:plan:accurate": "PROMPT_TOKENIZER=accurate for f in .github/prompts/*.prompt.md; do node tools/prompt/plan_preview.js --accurate \"$f\" || exit 1; done"
  },
  "workspaces": [
    "apps/*",
    "libs/*",
    "tools/*",
    "generators/*"
  ],
  "devDependencies": {
    "@nx/devkit": "22.0.2",
    "@nx/eslint": "22.0.2",
    "@nx/eslint-plugin": "22.0.2",
    "@nx/expo": "22.0.2",
    "@nx/jest": "22.0.2",
    "@nx/js": "22.0.2",
    "@nx/next": "22.0.2",
    "@nx/node": "22.0.2",
    "@nx/remix": "22.0.2",
    "@nx/workspace": "22.0.2",
    "@nxlv/python": "^18.0.0",
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "@types/jest": "30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@typescript-eslint/parser": "8.46.0",
    "eslint": "9.37.0",
    "jest": "30.2.0",
    "nx": "22.0.2",
    "ts-jest": "29.4.4",
    "tslib": "2.8.1",
    "typescript": "^5.0.0"
  }
}
