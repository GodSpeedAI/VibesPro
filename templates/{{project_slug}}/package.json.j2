    "@nx/node": "21.6.4",
    "@nx/workspace": "21.6.4",
    "@types/jest": "30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@typescript-eslint/parser": "8.46.0",
    "eslint": "9.37.0",
    "jest": "30.2.0",
    "nx": "21.6.4",
    "ts-jest": "29.4.4",
    "tslib": "2.8.1",
    "typescript": "^5.0.0"
  }
