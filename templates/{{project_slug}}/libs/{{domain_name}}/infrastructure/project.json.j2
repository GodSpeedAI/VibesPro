{
  "name": "{{ domain_name }}-infrastructure",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/{{ domain_name }}/infrastructure/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/{{ domain_name }}/infrastructure",
        "main": "libs/{{ domain_name }}/infrastructure/src/index.ts",
        "tsConfig": "libs/{{ domain_name }}/infrastructure/tsconfig.lib.json",
        "assets": ["libs/{{ domain_name }}/infrastructure/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/{{ domain_name }}/infrastructure/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/{{ domain_name }}/infrastructure/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "coverageReporters": ["text"]
        }
      }
    }
  },
  "tags": ["domain:{{ bounded_context }}", "layer:infrastructure", "type:{{ architecture_style }}"]
}
