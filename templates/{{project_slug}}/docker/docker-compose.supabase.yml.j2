# Docker Compose for local Supabase development
# This provides a lightweight local database for type generation and testing
# Full Supabase services (Auth, Storage, etc.) can be added as needed

services:
  # PostgreSQL database - the core of Supabase
  db:
    image: supabase/postgres:15.1.0.117
    container_name: {{ project_slug }}-supabase-db
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 5
    ports:
      - "${POSTGRES_PORT:-54322}:5432"
    environment:
      POSTGRES_USER: ${POSTGRES_USER:-postgres}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-postgres}
      POSTGRES_DB: ${POSTGRES_DB:-postgres}
      # Required for Supabase postgres image
      JWT_SECRET: ${JWT_SECRET:-super-secret-jwt-token-with-at-least-32-characters}
      JWT_EXP: ${JWT_EXP:-3600}
    volumes:
      - supabase_db_data:/var/lib/postgresql/data
      # Mount migrations for automatic application
      - ../supabase/migrations:/docker-entrypoint-initdb.d/migrations:ro

  # Postgres Meta - API for database introspection
  meta:
    image: supabase/postgres-meta:v0.84.2
    container_name: {{ project_slug }}-supabase-meta
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/health"]
      interval: 10s
      timeout: 5s
      retries: 5
    environment:
      PG_META_PORT: 8080
      PG_META_DB_HOST: db
      PG_META_DB_PORT: 5432
      PG_META_DB_NAME: ${POSTGRES_DB:-postgres}
      PG_META_DB_USER: ${POSTGRES_USER:-postgres}
      PG_META_DB_PASSWORD: ${POSTGRES_PASSWORD:-postgres}
    depends_on:
      db:
        condition: service_healthy

  # PostgREST - RESTful API for PostgreSQL
  rest:
    image: postgrest/postgrest:v12.2.8
    container_name: {{ project_slug }}-supabase-rest
    restart: unless-stopped
    environment:
      PGRST_DB_URI: postgres://${POSTGRES_USER:-postgres}:${POSTGRES_PASSWORD:-postgres}@db:5432/${POSTGRES_DB:-postgres}
      PGRST_DB_SCHEMAS: public,storage,graphql_public
      PGRST_DB_ANON_ROLE: anon
      PGRST_JWT_SECRET: ${JWT_SECRET:-super-secret-jwt-token-with-at-least-32-characters}
      PGRST_DB_USE_LEGACY_GUCS: "false"
    ports:
      - "${REST_PORT:-54324}:3000"
    depends_on:
      db:
        condition: service_healthy

  # Supabase Studio - Database Management UI
  studio:
    image: supabase/studio:20240422-5cf5f86
    container_name: {{ project_slug }}-supabase-studio
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3000/api/profile"]
      interval: 10s
      timeout: 5s
      retries: 5
    ports:
      - "${STUDIO_PORT:-54323}:3000"
    environment:
      STUDIO_PG_META_URL: http://meta:8080
      SUPABASE_URL: http://localhost:${REST_PORT:-54324}
      SUPABASE_REST_URL: http://rest:3000
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-postgres}
    depends_on:
      meta:
        condition: service_healthy

volumes:
  supabase_db_data:
    driver: local
