{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
        "<rootDir>"
    ],
    "testMatch": [
        "<rootDir>/tests/**/*.{test,spec}.{ts,js}",
        "<rootDir>/tools/**/*.{test,spec}.{ts,js}",
        "<rootDir>/generators/**/*.{test,spec}.{ts,js}"
    ],
    "transform": {
        "^.+\\.ts$": [
            "ts-jest",
            {
                "tsconfig": "tsconfig.spec.json"
            }
        ]
    },
    "collectCoverageFrom": [
        "tools/**/*.{ts,js}",
        "generators/**/*.{ts,js}",
        "!**/*.d.ts",
        "!**/node_modules/**",
        "!**/dist/**",
        "!**/*.config.{js,ts}",
        "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
        "text",
        "lcov",
        "html"
    ],
    "setupFilesAfterEnv": [
        "<rootDir>/jest.setup.js"
    ],
    "moduleFileExtensions": [
        "ts",
        "js",
        "json"
    ],
    "clearMocks": true,
    "restoreMocks": true,
    "verbose": true,
    "testPathIgnorePatterns": [
        "/node_modules/",
        "/dist/",
        "/coverage/"
    ]
}
