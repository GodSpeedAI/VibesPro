{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "copier-smoke-example",
  "sourceRoot": "apps/copier-smoke-example",
  "projectType": "application",
  "tags": ["scope:smoke-test", "type:generated", "layer:testing"],
  "targets": {
    "build": {
      "executor": "nx:noop",
      "options": {},
      "metadata": {
        "description": "No-op build target for smoke test validation"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/copier-smoke-example/**/*.ts"]
      }
    },
    "regenerate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "just copier-regenerate-smoke",
        "cwd": "."
      },
      "metadata": {
        "description": "Regenerate this smoke example from Copier template"
      }
    },
    "validate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "just copier-validate-smoke",
        "cwd": "."
      },
      "metadata": {
        "description": "Validate this smoke example meets all invariants"
      }
    }
  },
  "implicitDependencies": []
}
