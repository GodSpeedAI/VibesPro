{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "ai-context-tools",
  "projectType": "library",
  "sourceRoot": "tools/ai/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsc -p tools/ai/tsconfig.json"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --config tools/ai/vitest.config.ts"
      }
    }
  },
  "tags": ["scope:tools", "type:ai"]
}
