# Top-level EditorConfig
# Aligned with pyproject.toml (Black: line-length=88, Ruff: line-length=88, indent-width=4)
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
tab_width = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Ensure consistent newline at EOF
insert_final_newline = true

# Markdown / text files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML / JSON config files
[*.{yml,yaml,json}]
indent_size = 2

# JavaScript / TypeScript
[*.{js,jsx,ts,tsx,cjs,mjs}]
indent_size = 2
quote_type = single
max_line_length = 100

# Python - follow Black & Ruff settings from pyproject.toml
[*.py]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 88  # matches Black and Ruff
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# HTML / CSS / SCSS
[*.{html,css,scss}]
indent_size = 2

# TOML files (including pyproject.toml)
[*.toml]
indent_size = 2
max_line_length = 88  # keep pyproject.toml readable per project Python settings

# Justfile - prefer tabs
[Justfile]
indent_style = tab

# Optional extras
[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.env]
insert_final_newline = false
trim_trailing_whitespace = false
