{
    "name": "vibes-pro",
    "version": "0.1.0",
    "description": "Unified generator-first platform combining HexDDD and VibePDK",
    "type": "module",
    "scripts": {
        "build": "nx run-many --target=build --all",
        "test": "nx run-many --target=test --all",
        "test:jest": "jest --config jest.config.json",
        "test:jest:watch": "jest --config jest.config.json --watch",
        "test:jest:coverage": "jest --config jest.config.json --coverage",
        "lint": "nx run-many --target=lint --all",
        "dev": "nx run-many --target=serve --all --parallel=5",
        "generate": "copier copy . ../test-output",
        "test-generation": "copier copy . ../test-output && cd ../test-output && pnpm install && pnpm build"
    },
    "workspaces": [
        "templates/*",
        "tools/*"
    ],
    "devDependencies": {
        "@nx/jest": "19.8.4",
        "@nx/js": "19.8.4",
        "@nx/node": "19.8.4",
        "@nx/workspace": "19.8.4",
        "@nx/eslint-plugin": "19.8.4",
        "@types/jest": "^29.5.5",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^18.16.9",
        "@typescript-eslint/eslint-plugin": "^6.9.1",
        "@typescript-eslint/parser": "^6.9.1",
        "eslint": "^8.57.1",
        "jest": "^29.7.0",
        "jest-extended": "^4.0.2",
        "js-yaml": "^4.1.0",
        "nx": "19.8.4",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.1.1",
        "typescript": "^5.2.2",
        "vitest": "^1.6.1"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "overrides": {
        "vite-node": "1.6.1"
    },
    "packageManager": "pnpm@9.0.0"
}
